{
  "variables": {

    "vm_name": "ubuntu-1404",
    "hostname": "localhost",
    "domain": "",

    "cpus": "4",
    "disk_size": "20480",
    "memory": "1024",

    "preseed": "preseed_1404.cfg",
    "install_vagrant_key": "true",
    "docker": "false",

    "cm": "nocm",
    "cm_version": "",
    "headless": "",

    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",

    "ssh_username": "root",
    "ssh_password": "toor",
    "ssh_public_key": "ssh-rsa  images@intellit.nl",

    "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
    "iso_checksum_type": "md5",
    "iso_name": "ubuntu-14.04.3-server-amd64.iso",
    "iso_url": "http://nl.releases.ubuntu.com/releases/14.04/ubuntu-14.04.3-server-amd64.iso",

    "update": "true",
    "whiteout": "false",
    "unique_host_ssh_key": "true"

  },
  "builders": [
    {
      "type": "qemu",
      "vm_name": "{{ user `vm_name`}}",
      "disk_size": "{{user `disk_size`}}",

      "boot_wait": "10s",
      "http_directory": "http",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "ssh_port": 22,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "10000s",

      "headless": "{{user `headless`}}",

      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz auto",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/modelcode=SKIP",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " locale=en_US",
        " netcfg/get_hostname={{ user `hostname` }}",
        " passwd/root-login=true",
        " passwd/make-user=false",
        " passwd/root-password={{user `ssh_password`}}",
        " passwd/root-password-again={{user `ssh_password`}}",
        " noapic",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
        " -- ",
        "<enter>"
      ],
      "shutdown_command": "shutdown -h now",

      "accelerator": "kvm",
      "format": "qcow2",
      "disk_cache": "writeback",
      "net_device": "virtio-net",
      "disk_interface": "virtio",

      "qemuargs": [
        [ "-cpu", "host" ],
        [ "-smp", "{{user `cpus`}}" ],
        [ "-m", "{{user `memory`}}" ],
        [ "-nographic" ]
      ]

    }
  ],
  "provisioners": [
    {
      "type": "shell",

      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "UNIQUE_HOST_SSH_KEY={{ user `unique_host_ssh_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "SSH_PUBLIC_KEY={{user `ssh_public_key`}}",
        "WHITEOUT={{user `whiteout`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],

      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "scripts": [
        "scripts/update.sh",
        "scripts/tweaks.sh",
        "scripts/docker.sh",
        "scripts/vm-tools.sh",
        "scripts/cmtool.sh",
        "scripts/motd.sh",
        "scripts/minimize.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]

}