{
  "variables": {

    "vm_name": "centos-7",

    "cpus": "4",
    "disk_size": "20480",
    "memory": "1024",

    "kickstart": "ks7.cfg",
    "install_vagrant_key": "true",
    "docker": "false",

    "cm": "nocm",
    "cm_version": "",
    "headless": "",

    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",

    "ssh_username": "root",
    "ssh_password": "toor",
    "ssh_public_key": "ssh-rsa  images@intellit.nl",

    "iso_checksum": "cc75ca6ee278ec21b1d6fc6ce12f097b13836d2a",
    "iso_checksum_type": "sha1",
    "iso_name": "CentOS-7-x86_64-NetInstall-1804.iso",
    "iso_url": "http://ftp.nluug.nl/ftp/pub/os/Linux/distr/CentOS/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1804.iso",

    "update": "false",
    "whiteout": "false",
    "unique_host_ssh_key": "true"

  },
  "builders": [
    {
      "type": "qemu",
      "vm_name": "{{ user `vm_name`}}",
      "disk_size": "{{user `disk_size`}}",

      "boot_wait": "10s",
      "http_directory": "http",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "ssh_port": 22,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "10000s",

      "headless": "{{user `headless`}}",

      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart`}}<enter><wait>"
      ],
      "shutdown_command": "/sbin/halt -h -p",

      "accelerator": "kvm",
      "format": "qcow2",
      "disk_cache": "writeback",
      "net_device": "virtio-net",
      "disk_interface": "virtio",

      "qemuargs": [
        [ "-cpu", "host" ],
        [ "-smp", "{{user `cpus`}}" ],
        [ "-m", "{{user `memory`}}" ],
        [ "-nographic" ]
      ]

    }
  ],
  "provisioners": [
    {
      "type": "shell",

      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "UPDATE={{user `update`}}",
        "DOCKER={{user `docker`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "UNIQUE_HOST_SSH_KEY={{ user `unique_host_ssh_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "SSH_PUBLIC_KEY={{user `ssh_public_key`}}",
        "WHITEOUT={{user `whiteout`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
       ],

      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "scripts/fix-slow-dns.sh",
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/docker.sh",
        "scripts/tweaks.sh",
        "scripts/vm-tools.sh",
        "scripts/cmtool.sh",
        "scripts/motd.sh",
        "scripts/cleanup.sh"
     ]
    }
  ]

}